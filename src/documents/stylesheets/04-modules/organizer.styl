.organizer
  @extend $grid
  @extend $vertical_spacing.double
  border-spacing unit(1.2) 0
  @media max-small
    display block
  
  &:nth-child(odd)
    direction rtl
    @media max-small
      direction ltr
    .organizer-info
      text-align right


.organizer-avatar
  width unit(5)
  padding-top unit(0.25)
  @media max-small
    display inline-block

.organizer-info
  @extend $vertical_spacing
  text-align left
  @media max-small
    display block
    text-align center !important