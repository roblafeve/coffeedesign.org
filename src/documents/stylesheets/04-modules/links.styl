.links
  @extend $vertical_spacing
  @extend $grid.inline
  border-spacing unit(2) 0
  color violet
  @media (max-width: 770px)
    display block
  &.sub-sponsors
    border-spacing unit(2)
    a
      display block
      @extend $transition.sub-fast
      opacity 0.25
      &:hover
        opacity 1
    
.link
  @extend $vertical_spacing
  text-align center
  @media (max-width: 770px)
    display block