body
  font 100%/1.5 "Lato",sans-serif

heading-scale( 1.315, 1.5, 0, 0)
@media max-small
  heading-scale( 1.315, 1.5, 0, -1)

h1, h2, h3, h4, h5, h6
  font-family: 'Montserrat', sans-serif;
  text-transform uppercase
  font-weight 200
  line-height 1.2

p
  @extend $vertical_spacing.text

hr
  @extend $vertical_spacing.text
  display block
  width 60%
  border-style solid
  border-width 1px 0 0

.sub_heading
  font-family "Merriweather"
  font-weight 300
  font-style italic
  font-size 1.5em