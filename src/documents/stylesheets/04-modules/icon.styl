.icon
  @extend $grid

  font-family 'roblafeve'
  speak none
  font-style normal
  font-weight normal
  font-variant normal
  text-transform none
  text-decoration none
  line-height 1
  color inherit

  /* Better Font Rendering =========== */
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

  &.sub-mail:before {
    content: "\e600";
  }
  &.sub-vcard:before {
    content: "\e601";
  }
  &.sub-github:before {
    content: "\e602";
  }
  &.sub-twitter:before {
    content: "\e603";
  }
  &.sub-uniE604:before {
    content: "\e604";
  }
  &.sub-arrow-left:before {
    content: "\e605";
  }
  &.sub-text:before {
    content: "\e606";
  }
  &.sub-text2:before {
    content: "\e607";
  }