form
  @extend $vertical_spacing

.form-fields
  display inline-table
  width 100%
  max-width unit(20)
  border-spacing unit(0.5)

.form-fields-field
  @extend $vertical_spacing
  display table-cell
  @media max-small
    display block
  &.sub-primary
    width 100%
  > *
    width 100%

$form_base 
  font-size inherit
  font inherit
  font-weight 500

$skin-text_box
  -webkit-appearance none
  transition box-shadow 0.25s ease-in-out
  outline none
  border none
  padding 0.6em 1.5em
  border-radius 1.5em
  box-shadow inset 0 0 1px 1px rgba(black, 0.25)
  @media max-small
    width 100%
  &:focus
    box-shadow inset 0 0 0 2px teal
  &.sub-white
    box-shadow inset 0 0 0 2px transparent
    background rgba(white, 0.25)
    color white
    &:focus
      box-shadow inset 0 0 0 2px
    &::-webkit-input-placeholder
      color rgba(white, 0.5) !important
    
// Form
form 
  @extend $vertical_spacing


// Fieldset
fieldset 
