@keyframes background_shift
  0%
    transform translateX(0%)
  100%
    transform translateX(25%)

.layout-content-wrapper
  background-color gray
  overflow hidden

  &.sub-background
    position relative
    color white
    background-color transparent
    &:before
      // @animation background_shift 60s infinite alternate ease-in-out
      content ""
      display block
      position absolute
      z-index -3
      top 0%
      right 0%
      width 100%
      height 100%
      background-image url("../images/bg-coffee.jpg")
      background-size  cover
      background-position center

.layout-content
  @extend $padding
  max-width unit(33.33)
  margin 0 auto

  text-align center

  &.sub-wide
    max-width unit(50)