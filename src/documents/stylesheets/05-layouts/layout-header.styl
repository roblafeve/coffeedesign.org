.layout-header
  @extend $grid
  table-layout auto
  z-index 1
  border-spacing unit(0.75)
  position -webkit-sticky
  position -moz-sticky
  position -ms-sticky
  position -o-sticky
  top 0
  overflow hidden

  background white
  border-bottom 1px solid darken(white, 5)

  > *
    vertical-align middle

.layout-header-logo
  padding-bottom unit(0.4)
  width unit(8)

.layout-header-nav
  text-align right